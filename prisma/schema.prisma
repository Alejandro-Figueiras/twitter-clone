generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  username String   @id @unique
  email    String   @unique
  account  Account?
}

model Account {
  username    String   @id @unique
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [username], references: [username])
  name        String
  photo       String?  
  banner      String? 
  description String?
}
